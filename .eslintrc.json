{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "amd": true
  },
  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "module"
  },
  "globals": {
    "$": true,
    "jQuery": true,
    "jest/globals": true
  },
  "plugins": ["prettier", "jest"],
  "extends": ["eslint:recommended", "prettier", "plugin:jest/recommended"],
  "rules": {
    "prettier/prettier": "error",
    "no-console": "off",
    "no-unused-vars": "warn",
    "no-control-regex": "off"
  }
}
